<h1>Question Details</h1>

<%= render './answers/form' %>

<%= @question.title %> <br /> <%= @question.body %> <br>

<ul>
  <% if !@answers.nil? %>
    <% @answers.each do |answer| %>
  <li>
    <%= answer.body %> <br>
  </li>
  <% end %>
</ul>
<% else %>
   No answers yet!
<% end %>

<%= link_to 'Edit', edit_question_path(@question) %>
<%= link_to 'Back', questions_path %>
